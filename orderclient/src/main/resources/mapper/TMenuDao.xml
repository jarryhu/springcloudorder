<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hukun.repositry.OrderRepository">

    <resultMap type=".entity.TMenu" id="TMenuMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="OTHER"/>
        <result property="flavor" column="flavor" jdbcType="VARCHAR"/>
        <result property="tid" column="tid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TMenuMap">
        select
          id, name, price, flavor, tid
        from order.t_menu
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TMenuMap">
        select
          id, name, price, flavor, tid
        from order.t_menu
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TMenuMap">
        select
        id, name, price, flavor, tid
        from order.t_menu
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="flavor != null and flavor != ''">
                and flavor = #{flavor}
            </if>
            <if test="tid != null">
                and tid = #{tid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into order.t_menu(name, price, flavor, tid)
        values (#{name}, #{price}, #{flavor}, #{tid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update order.t_menu
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="flavor != null and flavor != ''">
                flavor = #{flavor},
            </if>
            <if test="tid != null">
                tid = #{tid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from order.t_menu where id = #{id}
    </delete>

</mapper>